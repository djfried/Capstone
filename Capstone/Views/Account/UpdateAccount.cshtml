@model Capstone.Models.UserViewModels
@{
    ViewBag.Title = "Update Account";
}

<h2>Update Account</h2>
<hr/>
@using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


<div class="form-group">
    @Html.Label("Password", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.Password("password",Model.User.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.Password, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Confirm Password", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.Password("confirmpassword", Model.User.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.Password, "", new { @class = "text-danger" })
    </div>
</div>
<hr />
<h4>Contact Info</h4>
<div class="form-group">
    @Html.Label("First Name", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("fname",Model.User.FirstName, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.FirstName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Last Name", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("lname",Model.User.LastName, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.LastName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Address 1", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("add1",Model.User.Address1, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.Address1, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Address 2", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("add2",Model.User.Address2, new { @class = "form-control" })

    </div>
</div>
<div class="form-group">
    @Html.Label("City", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("city",Model.User.City, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.City, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.Label("State", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("state",Model.User.State, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.State, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Zip Code", new { @class = "col-md-2  control-label" })
    <div class="col-md-10">
        @Html.TextBox("zip",Model.User.Zip, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.Zip, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Home Phone", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("hphone",Model.User.PhoneHome, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.PhoneHome, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Cell Phone", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("cphone",Model.User.PhoneCell, new { @class = "form-control" })
    
    </div>
</div>
<div class="form-group">
    @Html.Label("Office Phone", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("ophone",Model.User.PhoneOffice, new { @class = "form-control" })

    </div>
</div>
<div class="form-group">
    @Html.Label("Company Name", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("cname",Model.User.CompanyName, new { @class = "form-control" })
        @Html.ValidationMessage(Model.User.CompanyName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.Label("Branch", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBox("branch",Model.User.BranchLocation, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.Label(Model.User.Foods, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @{
        var FoodList = new[]
        {
        new SelectListItem { Value = "1", Text = "No Preference" },
        new SelectListItem { Value = "2", Text = "Vegetarian" },
        new SelectListItem { Value = "3", Text = "Vegan" }
        };
        }
        @Html.DropDownList(Model.User.Foods, FoodList, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.Label(Model.User.AdditionalInfo, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextArea(Model.User.AdditionalInfo, new { @class = "form-control" })
    </div>
</div>
<div class="form-inline">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-success" value="Update" />
        <input type="button" class="btn btn-danger" value="Cancel" />
    </div>
</div>
<hr />

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}
