@model Capstone.Models.EventsViewModels

@{
    ViewBag.Title = "Events";
}

<h2>Upcoming Events</h2>
<hr/>
@using (Html.BeginForm("Details", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<table class="table table-striped table-hover">
    <tr>
        <th>Event Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Location</th>
        <th>Type</th>
        <th></th>
    </tr>
@foreach (var item in Model.Events)
{   
    <tr>
        <td>
            @Html.DisplayFor(m=>item.Title)
        </td>
        <td>
            @Html.DisplayFor(m => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(m => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(m => item.Location)
        </td>
        <td>
            @Html.DisplayFor(m => item.Type)
        </td>
        <td>
            <input action="" onclick="" value="Details" type="button" class="button button-primary"/>
        </td>
    </tr>

    
}

</table>
}